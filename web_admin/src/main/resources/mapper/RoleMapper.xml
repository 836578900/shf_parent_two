<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--名称空间设置成RoleDao的全类名-->
<mapper namespace="com.mutongyyds.mapper.RoleMapper">
    <select id="findAll" resultType="role">
        select * from acl_role where is_deleted=0
    </select>
    <select id="getById" resultType="role">
        select * from acl_role where id =#{id}
    </select>

    <insert id="insert">
        insert into acl_role (
            role_name,
            role_code,
            description
        ) values (
            #{roleName},
            #{roleCode},
            #{description}
        )
    </insert>

    <update id="update">
        update acl_role set
        role_name=#{roleName},role_code=#{roleCode},description=#{description}
        where id=#{id}
    </update>

    <delete id="delete">
        update acl_role set
            is_deleted = 1
        where
            id = #{id}
    </delete>
</mapper>